<Window x:Class="kolory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kolory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="320" MinHeight="200"
        KeyDown="Window_KeyDown">
    <DockPanel LastChildFill="True">

        <Slider x:Name="sliderB" Maximum="255" Margin="10,10,10,10" DockPanel.Dock="Bottom" ValueChanged="sliders_ValueChanged"/>
        <Slider x:Name="sliderG" Maximum="255" Margin="10,10,10,10" DockPanel.Dock="Bottom" ValueChanged="sliders_ValueChanged"/>
        <Slider x:Name="sliderR" Maximum="255" Margin="10,10,10,10" DockPanel.Dock="Bottom" ValueChanged="sliders_ValueChanged"/>
        <Rectangle x:Name="rectangle" DockPanel.Dock="Top" Margin="10,10,10,0" Stroke="Black" />
    </DockPanel>
</Window>
